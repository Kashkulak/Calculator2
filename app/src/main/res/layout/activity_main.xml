<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:freezesText="true"
        android:gravity="end|bottom"
        android:hint="0"
        android:paddingEnd="25sp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="60sp"></TextView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1.55"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cleaning"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:onClick="onClick_buttonTyping"
                android:text="AC"
                android:textColor="@android:color/black"
                android:textSize="31sp" />

            <Button
                android:id="@+id/hz"
                style="@style/gray_btn"
                android:text="+/-" />

            <Button
                android:id="@+id/percent"
                style="@style/gray_btn"
                android:text="%" />

            <Button
                android:id="@+id/subtraction"
                style="@style/operation"
                android:text="รท" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/one"
                style="@style/btn"
                android:text="1" />

            <Button
                android:id="@+id/two"
                style="@style/btn"
                android:text="2" />

            <Button
                android:id="@+id/three"
                style="@style/btn"
                android:text="3" />

            <Button
                android:id="@+id/multiply"
                style="@style/operation"
                android:text="ร" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/four"
                style="@style/btn"
                android:text="4" />

            <Button
                android:id="@+id/five"
                style="@style/btn"
                android:text="5" />

            <Button
                android:id="@+id/six"
                style="@style/btn"
                android:text="6" />

            <Button
                android:id="@+id/minus"
                style="@style/operation"
                android:text="-" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:id="@+id/seven"
                style="@style/btn"
                android:text="7" />

            <Button
                android:id="@+id/eight"
                style="@style/btn"
                android:text="8" />

            <Button
                android:id="@+id/nine"
                style="@style/btn"
                android:text="9" />

            <Button
                android:id="@+id/plus"
                style="@style/operation"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:onClick="onClick_buttonTyping"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="33sp" />

            <Button
                android:id="@+id/save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:text="save"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <Button
                android:id="@+id/comma"
                style="@style/btn"
                android:text="," />


            <Button
                android:id="@+id/equal"
                style="@style/operation"
                android:text="=" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>